
<div class="fafafa p-3">
  <div class="nav-top d-flex p-5 justify-content-between align-items-center">
    <h1>Explore</h1>
    <%= link_to '#' do  %>
      <i class="fas fa-ellipsis-v"></i>
    <% end %>
  </div>

  <div class>
    <%= form_tag(library_books_path, method: :get) do %>
      <div class="ml-auto mr-auto mb-4 p-2 width">
      <%= text_field_tag :title,
            params[:title],
            class: "form-control white-bar b-sh text-center",
            placeholder: "Search..."
          %>
      </div>
      <p class="nunito ml-5">Filter by</h2>
      <div class="d-flex justify-content-around m-2 p-2">
      <%=  select_tag :language, options_for_select(["English", "French", "Spanish"], selected: params["language"]), include_blank: "Language", class: "border-green" %>
      <%=  select_tag :genre, options_for_select(["Fiction", "Non-Fiction", "Poetry", "Drama", "Sci-Fi"], selected: params["genre"]),  include_blank: "Genre", class: "border-green"  %>
      <%= button_tag(class: "btn icon-primary mt-1") do %>
          <i class="fas fa-search"></i> 
      <% end %>
    <% end %>
  </div>

<% if @library_books.empty? %>
<div class="text-center">
 <%= cl_image_tag("https://res.cloudinary.com/dfgdbji11/image/upload/v1616376980/reading-corner-colour_ak0ida.svg", class: "not-found") %>
 <h1 class="mt-3">No results  found.</h1>
 <p>Please check spelling or try a different city.</p>
 <button class="btn btn-green">Go back</button>
</div>
<% else %>
  <% @library_books.each do |lib_book| %>
  <div class="book-results-card d-flex b-sh m-3">
    <div class="image" style="background-image: url('<%= cl_image_path lib_book.book.photo.key %>')"></div>
    <div class="information p-3">

      <%= link_to library_book_path(lib_book) do %>
        <h2><%= lib_book.book.title %></h2>
      <% end %>
      <p><%= lib_book.book.author %></p>
      <div class="user-owner d-flex">
        <%= cl_image_tag lib_book.library.user.photo.key, class: "avatar-20 mr-2", alt: "avatar" %>

        <!--link should be black, not blue >> -->

        <%= link_to user_path(lib_book.library.user) do %>
          <p class="name"> <%= lib_book.library.user.first_name %>
        <% end %>

        <span style="font-style: italic; color: gray; font-weight: 300" class="span-location"><%= lib_book.library.user.location %></span></p>
        </div>
        <div class="tags d-flex">
            <%= link_to lib_book.book.genre , library_books_path("?genre=#{lib_book.book.genre}"), class: "btn genre mr-2" %>
        </div>
        <i class="fas fa-heart"></i>
      </div>
    </div>
    <% end %>
  <% end %>
</div>

<%= render 'shared/nav-bottom' %>
