<div class="fafafa">
  <div class="nav-top d-flex px-4 pt-4 justify-content-between align-items-center">
    <%= link_to messages_path do %>
      <i class="fas fa-chevron-left"></i>
    <% end %>

    <div class="card-message d-flex b-sh align-items-center px-2 py-1 flex-grow-1 mx-3">
    <%= link_to user_path(@chatroom.get_other_user(current_user)) do %>
      <div class="avatar-50 mr-2" style="background-image: url(' <%= cl_image_path @chatroom.get_other_user(current_user).photo.key%>')"></div>
    <% end %>
    <div class="message-info flex-grow-1">
      <%= link_to user_path(@chatroom.get_other_user(current_user)) do %>
        <h2> <%= @chatroom.get_other_user(current_user).first_name %> </h2>
      <% end %>
      <%= link_to library_book_path(@chatroom.book.id) do %>
        <p><%= @chatroom.book.title %></p>
        <p><%= @chatroom.book.author %></p>
      <% end %>
    </div>
    </div>

    <%= link_to '#' do  %>
      <i class="fas fa-ellipsis-v"></i>
    <% end %>
  </div>

  <div class="container app-container app-container-pink mt-5 pt-4 d-flex flex-column justify-content-end">
    <div id="messages" data-chatroom-id=""<%= @chatroom.id %>">
      <% @chatroom.messages.each do |message| %>
        <%= render 'messages/message', message: message %>
      <% end %>
    </div>
    
    <div class="chat-input">
      <div class="text-center d-flex position-relative">
        <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
          <%= f.input :content, label: false, placeholder: "Message...", class: "form-controlr"%>
        <% end %>

        <%= button_tag(class: "btn icon-primary mt-2 position-absolute", style: "top: -4px; right:6px") do %>
          <i class="fab fa-telegram-plane"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/nav-bottom' %>
