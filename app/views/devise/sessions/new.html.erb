<div class="nav-top d-flex p-4 justify-content-between align-items-center">  
  <%= link_to root_path do  %>
    <%= image_tag "1953.png", class: "", style:"height:20px"%>
  <% end %>

  <h1>Log in</h1>

  <%= link_to :back do %>
    <i class="fas fa-times"></i>
  <% end %>
</div>

<div class="container app-container fafafa sm-12 p-4">
    <%= image_tag "https://www.cruzyortiz.com/wp-content/plugins/all-in-one-seo-pack/images/default-user-image.png", class: "avatar-100 d-flex ml-auto mr-auto", alt: "avatar" %>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="input-bar my-4 position-relative">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form-control gray-bar" }  %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "form-control gray-bar" } %>
    </div>
    <p class="text-center font-weight-bold"><%= link_to "Forgot your password?", new_password_path(resource_name), class: "black" %></p>
    <div class="form-actions mt-3">
    <%= f.button :submit, "Log in", class: "btn btn-green log-in w-100" %>
    </div>
    <% end %>
    
    <div class="mt-4">
    <p class="text-center font-weight-bold">I don't have an account. <span><%= link_to "Sign up", new_registration_path(resource_name), class:"black" %></span></p>
    </div>
</div>

<%= render 'shared/nav-bottom' %>
