<div class="nav-top d-flex p-4 justify-content-between align-items-center">
  <%= link_to '#' do %>
    <i class="fas fa-chevron-left"></i>
  <% end %>

  <h1>Log in</h1>

  <%= link_to '#' do  %>
    <i class="fas fa-ellipsis-v"></i>
  <% end %>
</div>

<div class="container sm-12 p-4">

    <%= image_tag "https://kitt.lewagon.com/placeholder/users/cveneziani", class: "avatar-100 d-flex ml-auto mr-auto", alt: "avatar" %>


    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="input-bar my-4 position-relative">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    </div>


    <p class="text-center font-weight-bold"><%= link_to "Forgot your password?", new_password_path(resource_name), class: "black" %></p>

    <div class="form-actions mt-3">
    <%= f.button :submit, "Log in", class: "btn btn-green log-in" %>  
    </div>
    <% end %>

    <div class="mt-4">
    <p class="text-center font-weight-bold">I don't have an account. <span><%= link_to "Sign up", new_registration_path(resource_name), class:"black" %></span></p>
    </div>

</div>



 

