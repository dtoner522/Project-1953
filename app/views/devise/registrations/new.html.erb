<div class="nav-top d-flex p-4 justify-content-between align-items-center">
  <%= link_to root_path do  %>
    <%= image_tag "1953.png", class: "", style:"height:20px"%>
  <% end %>

  <h1>Sign Up</h1>
 
  <%= link_to :back do %>
    <i class="fas fa-times"></i>
  <% end %>
</div>

<div class="container app-container fafafa sm-12 p-4">
  <%= image_tag "https://www.cruzyortiz.com/wp-content/plugins/all-in-one-seo-pack/images/default-user-image.png", class: "avatar-100 d-flex ml-auto mr-auto", alt: "avatar" %>



  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
     <div class="input-bar my-4 position-relative">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form-control gray-bar" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", class: "form-control gray-bar" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password", class: "form-control gray-bar" } %>
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first_name", class: "form-control gray-bar" }%>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last_name", class: "form-control gray-bar" }%>
    <%= f.input :bio,
                required: true,
                autofocus: true,
                input_html: { class: "form-control gray-bar" }%>
    <%= f.input :location,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "location", class: "form-control gray-bar", id: "location-input" }%>
    
     <%= f.input :photo, input_html: { class: 'd-none',  id: 'photo-input'}, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload a photo', as: :file %>
     <%= image_tag "", width: 300, class: "hidden", id: "photo-preview" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up",  class: "btn btn-green log-in" %>
  </div>
  <% end %>

  <div class="mt-4">
    <p class="text-center font-weight-bold">I have an account. <span><%= link_to "Log in", new_session_path(resource_name), class:"black" %></span></p>
  </div

</div>

<%= render 'shared/nav-bottom' %>
